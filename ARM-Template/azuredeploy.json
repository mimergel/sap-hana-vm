{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmNameInput": {
      "type": "string",
      "metadata": {
        "description": "The VM Name in Azure and OS level that you want to deploy"
      }
    },
    "hanaSystemId": {
      "type": "string",
      "maxLength": 3,
      "minLength": 3,
      "defaultValue": "HDB",
      "metadata": {
        "description": "HANA System ID."
      }
    },
    "osType": {
      "type": "string",
      "allowedValues": [
        "RHEL 7",
        "RHEL 8",
        "SLES 12 SP4",
        "SLES 12 SP5",
        "SLES 15 SP2"
      ],
      "defaultValue": "SLES 12 SP4",
      "metadata": {
        "description": "The type of the operating system you want to deploy."
      }
    },
    "dbType": {
      "type": "string",
      "allowedValues": [
        "HANA"
      ],
      "defaultValue": "HANA",
      "metadata": {
        "description": "The type of the database"
      }
    },
    "hanaSystemSize": {
      "type": "string",
      "allowedValues": [
        "128_GB-Non-PRD",
        "160_GB-Non-PRD",
        "192_GB",
        "256_GB",
        "512_GB",
        "1.000_GB",
        "1.792_GB",
        "2.000_GB",
        "2.850_GB",
        "3.892_GB",
        "5.700_GB",
        "11.400_GB"
      ],
      "defaultValue": "192_GB",
      "metadata": {
        "description": "The size of the HANA System you want to deploy."
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "azureuser",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "sshPublicKey",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Type of authentication to use on the Virtual Machine."
      }
    },
    "adminPasswordOrKey": {
      "type": "securestring",
      "metadata": {
        "description": "Password or ssh key for the Virtual Machine."
      }
    },
    "subnetId": {
      "type": "string",
      "metadata": {
        "description": "The id of the subnet you want to use."
      }
    },
    "availabilityZone": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Zone number. Set to 0 if you do not want to use Availability Zones"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "Owner": {
      "type": "string",
      "defaultValue": "SAP Team Contact",
      "metadata": {
        "description": "Provide mandatory Owner Name"
      }
    },
    "CostCenter": {
      "type": "string",
      "defaultValue": "28007510",
      "metadata": {
        "description": "Provide mandatory Cost Center ID"
      }
    },
    "Backup": {
      "type": "string",
      "defaultValue": "Non-PRD",
      "metadata": {
        "description": "DeployIfNotExist: Configure backup on the VM with a given tag to an existing recovery services vault in the same location, expected Tag is HANABackup with value Non-PRD or PRD"
      }
    },
    "Boot_Diag_URL": {
      "type": "string",
      "defaultValue": "https://saponazuretrialdiag.blob.core.windows.net",
      "metadata": {
        "description": "URL of storage account for boot diagnostics"
      }
    },
    "Script_URL": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mimergel/sap-hana-vm/main/Scripts/diskConfig.sh",
      "metadata": {
        "description": "URL of the disk configuration script"
      }
    }
  },
  "variables": {
    "selectedZones": "[if(equals(parameters('availabilityZone'),0), json('null'), array(parameters('availabilityZone')))]",
    "images": {
      "RHEL 7": {
        "sku": "77sapha-gen2",
        "offer": "RHEL-SAP-HA",
        "publisher": "RedHat",
        "OSType": "Linux"
      },
      "RHEL 8": {
        "sku": "81sapha-gen2",
        "offer": "RHEL-SAP-HA",
        "publisher": "RedHat",
        "OSType": "Linux"
      },
      "SLES 12 SP4": {
        "sku": "12-sp4-gen2",
        "offer": "SLES-SAP",
        "publisher": "SUSE",
        "OSType": "Linux"
      },
      "SLES 12 SP5": {
        "sku": "gen2",
        "offer": "sles-sap-12-sp5",
        "publisher": "SUSE",
        "OSType": "Linux"
      },
      "SLES 15 SP2": {
        "sku": "gen2",
        "offer": "sles-sap-15-sp2",
        "publisher": "SUSE",
        "OSType": "Linux"
      }
    },
    "internalOSType": "[variables('images')[parameters('osType')].OSType]",
    "csExtension": {
      "Linux": {
        "Publisher": "Microsoft.Azure.Extensions",
        "Name": "CustomScript",
        "Version": "2.0",
        "script": "[parameters('Script_URL')]",
        "scriptCall": "sh diskConfig.sh"
      }
    },
